<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Polygon}" x:Key="Plus">
        <Setter Property="Fill" Value="White"/>
        <Setter Property="Stroke" Value="Black"/>
        <Setter Property="StrokeThickness" Value="0.5"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Points" Value="3,10 10,10 10,3 16,3 16,10 23,10 23,16 16,16 16,23 10,23 10,16 3,16"/>
    </Style>
    <Style TargetType="{x:Type Polygon}" x:Key="Minus">
        <Setter Property="Fill" Value="White"/>
        <Setter Property="Stroke" Value="Black"/>
        <Setter Property="StrokeThickness" Value="0.5"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Points" Value="3,10 23,10 23,16 3,16"/>
    </Style>
</ResourceDictionary>