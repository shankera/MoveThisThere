<Window x:Class="MoveThisThere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="273*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.Column="0" Margin="0,0,5.4,0">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit"/>
            </MenuItem>
        </Menu>
        <ToolBarTray Grid.Row="1" Margin="0,0,0.4,0.451"/>
        <DockPanel Grid.Row="1" Margin="0,0,0.4,0.4" Grid.ColumnSpan="1" Grid.RowSpan="1">
            <Button Grid.Row="w" Content="Skip" MinWidth="75" Margin="0,0,0.4,0.4"/>
        </DockPanel>
    </Grid>
</Window>
