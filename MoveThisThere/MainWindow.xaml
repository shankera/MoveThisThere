<Window x:Class="MoveThisThere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MoveThisThere" Height="350" Width="525"  Icon="MTT.ico">
        <Grid Name="BigGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="26"/>
            </Grid.RowDefinitions>
            <ScrollViewer Name="FieldScroller"  
                          VerticalScrollBarVisibility="Auto"
                          Grid.ColumnSpan="2"
                          Grid.Row="0"/>
            <Button Content="Do" Click="DoOnClick" Grid.Column="1" Grid.Row="1" />
        </Grid>
</Window>
